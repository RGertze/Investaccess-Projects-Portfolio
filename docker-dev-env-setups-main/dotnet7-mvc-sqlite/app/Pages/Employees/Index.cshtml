@page
@model App.Pages.Employees.IndexModel

@{
    ViewData["Title"] = "Employees";
    ViewData["StoreName"] = Model.store.Name;
}

<h1>
    Employees of: @ViewData["StoreName"]
</h1>

<p>
    <a asp-page="./Create" asp-route-storeId="@Model.store.Id">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.employees[0].EmployeeNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.employees[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.employees[0].Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.employees[0].Cell)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.employees[0].Store)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.employees)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EmployeeNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cell)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Store.Address)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
