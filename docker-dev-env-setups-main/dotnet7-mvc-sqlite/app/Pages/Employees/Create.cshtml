@page
@model App.Pages.Employees.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Employee for: <b>@Model.store.Name</b></h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <input asp-for="inputData.StoreId" value="@Model.store.Id" type="hidden" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="inputData.EmployeeNumber" class="control-label"></label>
                <input asp-for="inputData.EmployeeNumber" class="form-control" />
                <span asp-validation-for="inputData.EmployeeNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="inputData.Name" class="control-label"></label>
                <input asp-for="inputData.Name" class="form-control" />
                <span asp-validation-for="inputData.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="inputData.Surname" class="control-label"></label>
                <input asp-for="inputData.Surname" class="form-control" />
                <span asp-validation-for="inputData.Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="inputData.Cell" class="control-label"></label>
                <input asp-for="inputData.Cell" class="form-control" />
                <span asp-validation-for="inputData.Cell" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index" asp-route-storeId="@Model.store.Id">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
